<div id="newContactPopup" >
<%= form_for(:contact, :url => contacts_path, :remote => true) do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :resource %>
<%= f.text_field :resource %>
<%= submit_tag('Save', :class => "button") %>
<% end %>
</div>
<div id="newGroupPopup" >
<%= form_for(:group, :url => groups_path, :remote => true) do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= submit_tag('Save', :class => "button") %>
<% end %>
</div>
<div id="addContactPopup" >

</div>
<script>
  $(function() {
  $( "#dialog1" ).dialog({width: 460, height: 250, position: [10,200]});
    $( "#dialog2" ).dialog({width: 460, height: 250, position: [500,100]});
  });
</script>
<h1 id="header">Users Profile</h1>
<div id="dialog1">
<% if @contacts.empty? %>
<p>You don't have any contacts</p>
<% end %>
<p id="contactOpenBtn" class="button" style="width:100px" >Add a Contact</p>

<ul id="contactList">
<%= render @contacts %>
</ul>
</div>
<div id="dialog2">
<% if @groups.empty? %>
<p>You don't have any groups</p>
<% end %>
<p id="groupOpenBtn" class="button" style="width:100px" >Add a Group</p>
<ul id="groupList">
<% @groups.each do |group| %>
<%= render group %>
<% end %>
</ul>
</div>
</div>


